class Solution {
public:
    long long getDescentPeriods(vector<int>& prices) {
        long long count=0;
        vector <int> sum;
        if(prices.size()==1){
            return 1;
        }
        if (prices.size()==0){
            return 0;
        }
        sum.push_back(1);
        for(int i=1; i<prices.size();i++){
            if(prices[i-1]-prices[i]==1){
                sum.push_back(sum[i-1]+1);
            }else if(prices[i-1]!=prices[i]){
                sum.push_back(1);
            }else if(prices[i-1]==prices[i]){
                sum.push_back(1);
            }
        }
        for(int j=0;j<sum.size();j++){
            count+=sum[j];
        }
        return count;
    }
};
// 43.04% runtime as of Dec 23rd
